<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>

        <File name="FileLogger"
              fileName="logs/automation.log"
              append="true">
            <PatternLayout
                pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %c{1} - %msg%n"/>
        </File>

    </Appenders>

    <Loggers>

        <Root level="info">
            <AppenderRef ref="FileLogger"/>
        </Root>

    </Loggers>

</Configuration>
